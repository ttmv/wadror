<p>
  <h1><%= @user.username %></h1>
  
</p>

<p><%= @user.username %> has made <%= pluralize(@user.ratings.count, 'rating') %></p>

<% if !@user.ratings.empty? %>

  <h2>Ratings</h2>

  <ul>
    <% @user.ratings.each do |rating| %>
      <li> <%= rating %>
      <% if @user == current_user %>
        
        <%=link_to 'delete', rating, method: :delete, 
        data: { confirm: 'Are you sure?' }%> 
      <% end %> 
      </li>
    <% end %>
  </ul>

<p>Average: <%= @user.average_rating %></p>  
<% end %>

<p>Favorite style: <%= @user.favorite_style %></p>
<h2> Memberships </h2>
<ul>
<% @user.beer_clubs.each do |bc| %>
  <li> <%= link_to bc.name, bc %> </li>
<% end %>
</ul>


<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %> 
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
